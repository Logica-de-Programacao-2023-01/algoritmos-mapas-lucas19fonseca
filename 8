package main

import "fmt"

func igualarDespesas(map1 map[string]float64) {

	maior := 0.0

	for _, ranMap1 := range map1 {

		if ranMap1 > maior {

			maior = ranMap1

		}

	}

	for nome, quantia := range map1 {

		quantia = maior - quantia

		fmt.Printf("%s deve pagar %.2f reais para  igualar.\n", nome, quantia)

	}

}

func main() {

	map1 := make(map[string]float64)
	map1["Donald"] = 10000
	map1["Ruben"] = 100
	map1["Alfredo"] = 500

	igualarDespesas(map1)

}
