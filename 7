import (
	"fmt"
	"strings"
)

func contarLetrasEPalavras(s string) map[string]map[string]int {

	map1 := make(map[string]map[string]int)

	palavras := strings.Fields(s)

	chars := []string{}

	for _, ranP := range palavras {
		chars = strings.Split(ranP, " ")
    
		map1[ranP] = make(map[string]int)

		for _, ranC := range chars {
			map1[ranP][ranC]++
		}
	}
	return map1
}

func main() {
	fmt.Println(contarLetrasEPalavras("here we go again"))
}
