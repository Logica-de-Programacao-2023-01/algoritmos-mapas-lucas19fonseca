package main

import (
	"fmt"
	"strings"
)

func contarPalavras(s string) map[string]int {

	map1 := make(map[string]int)
	conj := strings.Fields(s)

	for _, ranConj := range conj {

		map1[ranConj] += 1

	}

	return map1

}

func unirMapas(mapas []map[string]int) map[string]int {

	bigMap := make(map[string]int)

	for _, ranMapas := range bigMap {
		for chave, valor := range ranMapas {
			bigMap[chave] += valor
		}
	}
	return bigMap
}

func main() {
	a := "pedro"
	b := "paulo"
	c := "matheus"

	conj := []map[string]int{contarPalavras(a), contarPalavras(b), contarPalavras(c)}

	fmt.Println(unirMapas(conj))

}
